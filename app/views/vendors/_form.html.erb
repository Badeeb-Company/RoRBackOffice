<%= form_for [@promotion, @vendor], :html => { :class => "form-horizontal vendor" } do |f| %>

  <% if @vendor.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@vendor.errors.count, "error") %> prohibited this vendor from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @vendor.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :name, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :name, :class => 'form-control' %>
    </div>
    <%=f.error_span(:name) %>
  </div>
  <div class="form-group">
    <%= f.label :vendor_type, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :vendor_type, :class => 'form-control' %>
    </div>
    <%=f.error_span(:vendor_type) %>
  </div>
  <div class="form-group">
    <%= f.label :phone_number, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :phone_number, :class => 'form-control' %>
    </div>
    <%=f.error_span(:phone_number) %>
  </div>
  <div class="form-group">
    <%= f.label :mobile_number, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :mobile_number, :class => 'form-control' %>
    </div>
    <%=f.error_span(:mobile_number) %>
  </div>
  <div class="form-group">
    <%= f.label :governorate, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :governorate, :class => 'form-control' %>
    </div>
    <%=f.error_span(:governorate) %>
  </div>
  <div class="form-group">
    <%= f.label :address, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :address, :class => 'form-control' %>
    </div>
    <%=f.error_span(:address) %>
  </div>
  <div class="form-group">
    <%= f.label :lat, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :lat, :class => 'form-control' %>
    </div>
    <%=f.error_span(:lat) %>
  </div>
  <div class="form-group">
    <%= f.label :lng, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :lng, :class => 'form-control' %>
    </div>
    <%=f.error_span(:lng) %>
  </div>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                promotion_vendors_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>

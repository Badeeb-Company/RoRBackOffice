<%- model_class = Vendor -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:name) %></th>
      <th><%= model_class.human_attribute_name(:type) %></th>
      <th><%= model_class.human_attribute_name(:phone_number) %></th>
      <th><%= model_class.human_attribute_name(:mobile_number) %></th>
      <th><%= model_class.human_attribute_name(:governorate) %></th>
      <th><%= model_class.human_attribute_name(:address) %></th>
      <th><%= model_class.human_attribute_name(:lat) %></th>
      <th><%= model_class.human_attribute_name(:lng) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @vendors.each do |vendor| %>
      <tr>
        <td><%= link_to vendor.id, promotion_vendor_path(vendor.promotion_id, vendor) %></td>
        <td><%= vendor.name %></td>
        <td><%= vendor.vendor_type %></td>
        <td><%= vendor.phone_number %></td>
        <td><%= vendor.mobile_number %></td>
        <td><%= vendor.governorate %></td>
        <td><%= vendor.address %></td>
        <td><%= vendor.lat %></td>
        <td><%= vendor.lng %></td>
        <td>
          <%= link_to t('.show', :default => t("helpers.links.show")),
                      promotion_vendor_path(vendor.promotion_id, vendor), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_promotion_vendor_path(vendor.promotion_id, vendor), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      promotion_vendor_path(vendor.promotion_id, vendor),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_promotion_vendor_path,
            :class => 'btn btn-primary' %>

<%= link_to 'Go to Promotion', edit_promotion_path(@promotion), :class => 'btn btn-default' %>